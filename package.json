{
  "name": "q-and-a-backend",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "offline": "serverless offline start --printOutput",
    "cm": "npx git-cz",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --format verbose",
    "lint:fix": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix --format verbose",
    "prettier": "prettier --write src/**",
    "deploy:dev": "serverless deploy --stage development --region us-east-1 --verbose --conceal"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "http-status-codes": "^1.4.0",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "typedi": "^0.8.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.62",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.10.2",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "serverless": "^2.2.0",
    "serverless-dotenv-plugin": "^3.0.0",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-middleware": "0.0.10",
    "serverless-offline": "^6.7.0",
    "serverless-offline-dynamodb-streams": "^4.1.0",
    "serverless-webpack": "^5.3.5",
    "ts-jest": "^26.3.0",
    "ts-loader": "^8.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.3.0",
    "typescript": "^4.0.2",
    "webpack": "^4.44.2",
    "webpack-node-externals": "^2.5.2"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT",
  "engines": {
    "node": "~12.18.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,css,md}": [
      "npm run lint:fix",
      "npm run prettier"
    ]
  }
}
